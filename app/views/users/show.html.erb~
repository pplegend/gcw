
<%= form_for (@user) do |f| %>
  <div class="field">
    <%= f.label :用户名 %>
    <%= f.text_field :username %>
  </div>
  <div class="field">
  <%= f.label :状态 %>
  <% [ true, false ].each do |statu| %>
      <%= f.label statu %>
	<% if @user.enabled == statu %>
	   <%= radio_button_tag 'user[enabled]', statu,  :checked=>'checked' %>
	<% else %>
	   <%= radio_button_tag 'user[enabled]', statu %>
	<% end %>
      
    <% end %>
  </div>
  <div class="field">
    <%= f.label :角色 %>
    <% for role in Role.find(:all) do %>
	<%= check_box_tag 'role_ids[]', role.id, @user.role_ids.include?(role.id)%>
	<%= role.name %>
    <% end %>
  </div>
    <div class="actions">
    <%= f.submit %>
  </div>
<% end %>




