
<%= div_for comment do %>
      <% if current_user  %>
      <%= link_to 'Delete', image_comment_path(@image), :method => :delete, :class => "delete", :remote => true  %>
      <% end %>
     <% if comment.user %>
     <p><b><%= link_to comment.user.name, user_path(comment.user.id) %></b></p>
     <%=  comment.content %> <span class="comment_date_font"><%=time_ago_in_words(comment.created_at) %> ago</span>
     <% end %>
     
<% end %>

