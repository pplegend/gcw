<%= form_for @teach_video,:html => { :multipart => true, :class=>'well'}  do |f| %>


  <div class="field">
    <%= f.label :名字 %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :来源 %>
    <%= f.text_field :source %>
  </div>
  <div class="field">
    <%= f.label :下载链接 %>
    <%= f.text_field :download_link %>
  </div>
  <div class="field">
    <%= f.label :忧酷ID %><br />
    <%= f.text_field :youkuid %>
  </div>
  <div class="field">
    <%= f.label :视频封面 %><br />
    <%= f.file_field :image , :placeholder=> :image %>
  </div>
  
  <div class="field">
    <%= f.label :专辑 %><br />
    <%= f.select :group_id, options_for_select(@groups.collect{|group| [group.name, group.id]})%>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
